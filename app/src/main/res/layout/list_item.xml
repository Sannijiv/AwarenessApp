<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/Lamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/lampLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/lampNaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Regular.ttf"
                android:text="Lampnaam"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lampBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Regular.ttf"
                android:text="Brightness"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lampPixel0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Regular.ttf"
                android:text="Lamppixel0"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lampPixel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Regular.ttf"
                android:text="Lamppixel1"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lampPixel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Regular.ttf"
                android:text="Lamppixel2"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lampPixel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Regular.ttf"
                android:text="Lamppixel3"
                android:textColor="#333333"
                android:textSize="14dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>