<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditLamp">

    <EditText
        android:id="@+id/naamLamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="fonts/Roboto-Regular.ttf"
        android:text="Naam: "
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/HuidigeDecibel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:fontFamily="fonts/Roboto-Regular.ttf"
        android:text="Huidige Decibel Waarde "
        android:textColor="#000"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/MaxDecibel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:fontFamily="fonts/Roboto-Regular.ttf"
        android:text="Maximale Decibel Waarde"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/editLamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voer veranderingen in!" />


</LinearLayout>